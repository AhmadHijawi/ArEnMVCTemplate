<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @MainResources.AppName</title>

    @Scripts.Render("~/bundles/angular-lib")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @if(CommonConfig.IsRTL)
    {
        @Styles.Render("~/Content/flip")
    }

</head>
<body ng-app="mainApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(MainResources.AppName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(MainResources.HomePage, "Index", "Home")</li>
                    <li>@Html.ActionLink(MainResources.About, "About", "Home")</li>
                    <li>@Html.ActionLink(MainResources.Contact, "Contact", "Home")</li>
                    <li><a href="?lang=@MainResources.OtherLangCode">@MainResources.OtherLangName</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        <!-- Start Alerts -->
        <div ng-controller="alertsCtrl" class="alerts-container">
            <div ng-repeat="alert in alerts" class="alert alert-{{alert.typeTxt}} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{alert.message}}
            </div>
        </div>
        <!-- End Alerts -->

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @MainResources.AppName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular-ctrls")
    @RenderSection("scripts", required: false)
</body>
</html>
